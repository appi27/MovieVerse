<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:padding="15dp">


        <ImageView
            android:id="@+id/imageViewCopertina"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_alignParentStart="true"
            android:scaleType="centerCrop"
            android:onClick="openMovie"/>

        <!-- Titolo -->
        <TextView
            android:id="@+id/textViewTitolo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@id/imageViewCopertina"
            android:textColor="#7B85FE"
            android:textSize="20sp"
            android:textStyle="bold"
            android:ellipsize="end"
            android:maxLines="2"/>

        <!-- Genere e Anno -->
        <TextView
            android:id="@+id/textViewGenereAnno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewTitolo"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/imageViewCopertina"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="2"/>

        <!-- Trama -->
        <TextView
            android:id="@+id/textViewTrama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewGenereAnno"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/imageViewCopertina"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="4"/>

</RelativeLayout>