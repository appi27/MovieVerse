<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.MovieVerse">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieVerse"
        tools:targetApi="31">

        <activity android:name=".mainActivity.logic.AboutUsClick"
            android:exported="false">

        </activity>
        <activity
            android:name="com.MovieVerse.detailsActivity.logic.DetailsFilmActivity"
            android:exported="false" />
        <activity
            android:name="com.MovieVerse.mainActivity.logic.InfoActivity"
            android:exported="false" />
        <activity
            android:name="com.MovieVerse.filtersActivity.logic.FiltersActivity"
            android:exported="true"></activity>
        <activity
            android:name="com.MovieVerse.outputActivity.logic.ActivityOutput"
            android:exported="true"></activity>
        <activity
            android:name="com.MovieVerse.mainActivity.logic.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>